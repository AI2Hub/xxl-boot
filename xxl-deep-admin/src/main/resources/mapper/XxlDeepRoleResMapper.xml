<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxl.deep.admin.mapper.XxlDeepRoleResMapper">

    <resultMap id="XxlDeepRoleRes" type="com.xxl.deep.admin.model.entity.XxlDeepRoleRes" >
        <result column="id" property="id" />
        <result column="role_id" property="roleId" />
        <result column="res_id" property="resId" />
        <result column="add_time" property="addTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <sql id="Base_Column_List">
        t.`id`,
        t.`role_id`,
        t.`res_id`,
        t.`add_time`,
        t.`update_time`
    </sql>

    <insert id="batchInsert" parameterType="java.util.Map" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO xxl_deep_role_res (`role_id`,
                                   `res_id`,
                                   `add_time`,
                                   `update_time`)
        VALUES
        <foreach item="item" index="index" collection="roleResList" separator=",">
            (#{item.roleId}, #{item.resId}, NOW(), NOW())
        </foreach>
    </insert>

    <delete id="deleteByRoleId" parameterType="java.util.Map" >
        DELETE FROM xxl_deep_role_res
        WHERE `role_id` = #{roleId}
    </delete>

    <select id="loadRoleRes" parameterType="java.util.Map" resultMap="XxlDeepRoleRes">
        SELECT <include refid="Base_Column_List" />
        FROM xxl_deep_role_res AS t
        WHERE `role_id` = #{roleId}
    </select>

</mapper>