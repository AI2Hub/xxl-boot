<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxl.deep.admin.mapper.XxlDeepUserRoleMapper">

    <resultMap id="XxlDeepUserRole" type="com.xxl.deep.admin.model.entity.XxlDeepUserRole" >
        <result column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="role_id" property="roleId" />
        <result column="add_time" property="addTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <sql id="Base_Column_List">
        t.`id`,
        t.`user_id`,
        t.`role_id`,
        t.`add_time`,
        t.`update_time`
    </sql>

    <insert id="batchInsert" parameterType="java.util.Map" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO xxl_deep_user_role (
                                       `user_id`,
                                       `role_id`,
                                       `add_time`,
                                       `update_time`)
        VALUES
        <foreach item="item" index="index" collection="userRoleList" separator=",">
            (#{item.userId}, #{item.roleId}, NOW(), NOW())
        </foreach>
    </insert>

    <delete id="deleteByUserId" parameterType="java.util.Map" >
        DELETE FROM xxl_deep_user_role
        WHERE `user_id` =  #{userId}
    </delete>

    <select id="queryByUserId" parameterType="java.util.Map" resultMap="XxlDeepUserRole">
        SELECT <include refid="Base_Column_List" />
        FROM xxl_deep_user_role AS t
        WHERE t.`user_id` = #{userId}
    </select>

    <select id="queryByUserIds" parameterType="java.util.Map" resultMap="XxlDeepUserRole">
        SELECT <include refid="Base_Column_List" />
        FROM xxl_deep_user_role AS t
        WHERE t.`user_id` in
        <foreach collection="userIds" item="userId" index="index"  separator="," open="(" close=")"  >
            #{userId}
        </foreach>
    </select>

</mapper>
