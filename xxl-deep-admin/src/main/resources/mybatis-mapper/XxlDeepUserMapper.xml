<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxl.deep.admin.dao.XxlDeepUserMapper">

	<resultMap id="XxlDeepUser" type="com.xxl.deep.admin.model.XxlDeepUser" >
		<result column="id" property="id" />
		<result column="username" property="username" />
	    <result column="password" property="password" />
	    <result column="role" property="role" />
	    <result column="permission" property="permission" />
	</resultMap>

	<sql id="Base_Column_List">
		t.id,
		t.username,
		t.password,
		t.role,
		t.permission
	</sql>

	<insert id="insert" parameterType="com.xxl.deep.admin.model.XxlDeepUser" useGeneratedKeys="true" keyProperty="id" >
		INSERT INTO xxl_deep_user (
			username,
			password,
			role,
			permission
		) VALUES (
					 #{username},
					 #{password},
					 #{role},
					 #{permission}
				 );
	</insert>

	<delete id="delete" parameterType="java.util.HashMap">
		DELETE
		FROM xxl_deep_user
		WHERE id = #{id}
	</delete>

	<update id="update" parameterType="com.xxl.deep.admin.model.XxlDeepUser" >
		UPDATE xxl_deep_user
		SET
		<if test="password != null and password != ''">
			password = #{password},
		</if>
		role = #{role},
		permission = #{permission}
		WHERE id = #{id}
	</update>

	<select id="loadByUserName" parameterType="java.util.HashMap" resultMap="XxlDeepUser">
		SELECT <include refid="Base_Column_List" />
		FROM xxl_deep_user AS t
		WHERE t.username = #{username}
	</select>

	<select id="pageList" parameterType="java.util.HashMap" resultMap="XxlDeepUser">
		SELECT <include refid="Base_Column_List" />
		FROM xxl_deep_user AS t
		<trim prefix="WHERE" prefixOverrides="AND | OR" >
			<if test="username != null and username != ''">
				AND t.username like CONCAT(CONCAT('%', #{username}), '%')
			</if>
			<if test="role gt -1">
				AND t.role = #{role}
			</if>
		</trim>
		ORDER BY username ASC
		LIMIT #{offset}, #{pagesize}
	</select>

	<select id="pageListCount" parameterType="java.util.HashMap" resultType="int">
		SELECT count(1)
		FROM xxl_deep_user AS t
		<trim prefix="WHERE" prefixOverrides="AND | OR" >
			<if test="username != null and username != ''">
				AND t.username like CONCAT(CONCAT('%', #{username}), '%')
			</if>
			<if test="role gt -1">
				AND t.role = #{role}
			</if>
		</trim>
	</select>

</mapper>